<h2>Adaugare produs</h2>

<br/>

<form method="post" action="/Products/Add" class="d-flex flex-column" style="width:70%; gap:5px">
    <label>Nume produs</label>
    <input type="text" name="Name"/>
    
    <label>Descriere</label>
    <textarea name="Description"></textarea>
    <div>
        <label>Pret</label>
        <input type="number" name="Price" />
    </div>
    <label>Stoc</label>
    <input type="number" name="Stock" value="0"/>
    <div>
        <label>Categorie</label>
        <select name="CategoryID">
            @foreach (var category in ViewBag.Categories)
            {
                <option value="@category.CategoryID">@category.Name</option>
            }
        </select>
    </div>
    

    <button class="btn btn-success" style="width:fit-content;margin-top: 50px;padding:5px" type="submit">Adauga produs</button>
</form>