@using Microsoft.AspNetCore.Identity
@model StoreProject.Models.Product
@inject UserManager<ApplicationUser> UserManager


<h3>Produseshvb</h3>
<br />

@foreach (var product in ViewBag.Products)
{
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@product.Name</h5>
            <p class="card-text">@product.Description</p>
            <p>@product.Price</p>
            <a href="/Products/Show/@product.ProductID" class="btn btn-primary">Vezi produsul</a>
        </div>
    </div>
    <br />
}
@if(User.IsInRole("Admin") || User.IsInRole("Colaborator"))
{
    <a class="btn btn-primary" href="/Products/Add">Adauga produs</a>
}