@using Microsoft.AspNetCore.Identity
@model StoreProject.Models.Product
@inject UserManager<ApplicationUser> UserManager

<h3>Editeaza produs @Model.Name</h3>

<form method="post" action="/Products/Edit/@Model.ProductID">
    <label>Nume produs</label>
    <input type="text" name="Name" value="@Model.Name"/>
    <br />

    <label>Descriere</label>
    <input type="text" name="Description" value="@Model.Description"/>
    <br />

    <label>Pret</label>
    <input type="number" name="Price" value="@Model.Price"/>
    <br />

    <label>Categorie</label>
    <select name="CategoryID">
        @foreach (var category in ViewBag.Categories)
        {
            @if(Model.CategoryID == category.CategoryID)
            {
                <option value="@category.CategoryID" selected="selected">@category.Name</option>
            }
            else
            {
                <option value="@category.CategoryID">@category.Name</option>
            }
        }
    </select>
    <br />

    <button class="btn btn-success" type="submit">Adauga produs</button>
</form>