@using Microsoft.AspNetCore.Identity
@model StoreProject.Models.Product
@inject UserManager<ApplicationUser> UserManager

<h3>Editeaza produs @Model.Name</h3>

<form method="post" action="/Products/Edit/@Model.ProductID" class="d-flex flex-column" style="width:70%; gap:5px">
    <label>Nume produs</label>
    <input type="text" name="Name" value="@Model.Name"/>

    <label>Descriere</label>
    <textarea name="Description">@Model.Description</textarea>
    <div>
        <label>Pret</label>
        <input type="number" name="Price" value="@Model.Price" />
    </div>
    <label>Stoc</label>
    <input type="number" name="Stock" value="@Model.Stock"/>
    <div>
        <label>Categorie</label>
        <select name="CategoryID">
            @foreach (var category in ViewBag.Categories)
            {
                @if(Model.CategoryID == category.CategoryID)
                {
                    <option value="@category.CategoryID" selected="selected">@category.Name</option>
                }
                else
                {
                    <option value="@category.CategoryID">@category.Name</option>
                }
            }
        </select>
    </div>

    <button class="btn btn-success" style="width:fit-content;margin-top: 50px;padding:5px" type="submit">Salveaza schimbarile</button>
</form>